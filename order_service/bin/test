#!/bin/bash -e
export RAILS_ENV=test
# Forzar BD de test (Docker Compose inyecta DATABASE_URL de development)
export DATABASE_URL="postgres://postgres:postgres@postgres:5432/order_service_test"
export CUSTOMER_SERVICE_URL="${CUSTOMER_SERVICE_URL:-http://test-customer-service:3000}"
./bin/rails db:create db:migrate 2>/dev/null || true
exec bundle exec rspec "$@"
